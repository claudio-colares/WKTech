unit RecordItemPedido;

interface

uses
  RecordProduto;

type
  TItemPedido = record
    Codigo        : Integer;
    NumeroPedido  : Integer;
    Produto       : TProduto;
    Quantidade    : Float32;
    ValorUnitario : Currency;
    Valortotal    : Currency;

    procedure AtualizarValorTotal;

  end;

implementation

{ TItemPedido }

procedure TItemPedido.AtualizarValorTotal;
begin
  Valortotal := (Quantidade * ValorUnitario);
end;

end.
